{
	"name": "bluespice/configmanager",
	"type": "mediawiki-extension",
	"description": "Administration interface for configurations.",
	"license": "GPL-3.0-only",
	"require": {
		"composer/installers": "~1.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "25.0.0",
		"mediawiki/minus-x": "0.3.1",
		"php-parallel-lint/php-console-highlighter": "0.3.2",
		"php-parallel-lint/php-parallel-lint": "1.0.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"minus-x check .",
			"phpcs -p -s"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	},
	"extra": {
		"installer-name": "BlueSpiceConfigManager"
	}
}
